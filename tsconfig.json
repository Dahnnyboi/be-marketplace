{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",                                
    "rootDir": "./",                                  
    "baseUrl": "./src",                                  
    "outDir": "build",                                   
    // "paths": {},                                      
    "typeRoots": ["src/typings", "./node_modules/@types"],                                  
    // "types": [],                                      
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "noImplicitAny": true,                            
    "skipLibCheck": true                                 
  },
  "include": ["src/**/*", "index.ts"]
}
