{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",                                
    "rootDir": "./",                                  
    "baseUrl": "./src",                                  
    "outDir": "build",                                   
    "typeRoots": ["src/typings", "./node_modules/@types"],                                  
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "noImplicitAny": true,                            
    "skipLibCheck": true,                                 
    "paths": {
      "loaders": ["loaders/index"],
      "loaders/*": ["loaders/*"],
      "constants/*": ["constants/*"],
      "models/*": ["models/*"],
      "routes": ["routes/index"],
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,                                      
  },
  "ts-node": {
    "files": true
  },
  "include": ["src/**/*", "index.ts"]
}
